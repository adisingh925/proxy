<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        app:cardBackgroundColor="@color/dialog_bg_color"
        app:cardCornerRadius="@dimen/app_card_radius"
        app:cardElevation="0dp">


        <RelativeLayout
            android:id="@+id/dialog_height_rel_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/dialog_height_header_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp">

                <TextView
                    android:id="@+id/dialog_height_txt_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="@string/lbl_height"
                    android:textColor="@color/dialog_header_color"
                    android:textSize="@dimen/_13sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dialog_height_rel_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dialog_height_header_layout"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp">

                <RelativeLayout
                    android:id="@+id/dialog_height_rel_unit"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:background="@drawable/dialog_spinner_bg_selector">

                    <Spinner
                        android:id="@+id/dialog_height_spinner_units"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:backgroundTint="@color/white"
                        android:dropDownVerticalOffset="@dimen/_35sdp"
                        android:gravity="center"
                        android:overlapAnchor="true"
                        android:popupBackground="@color/dialog_spinner_bg_color"
                        android:spinnerMode="dropdown"/>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:src="@drawable/ic_vector_down_arrow"
                        app:tint="@color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/dialog_height_rel_picker_cm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dialog_height_rel_unit"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/dialog_height_lbl_cm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text="@string/lbl_centimeter"
                        android:textColor="@color/dialog_header_color"
                        android:textSize="@dimen/_12sdp" />

                    <com.shawnlin.numberpicker.NumberPicker
                        android:id="@+id/dialog_height_nm_picker_cm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dialog_height_lbl_cm"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:np_dividerColor="@color/np_divider_color"
                        app:np_formatter="@string/number_picker_formatter"
                        app:np_height="@dimen/_150sdp"
                        app:np_max="278"
                        app:np_min="30"
                        app:np_selectedTextColor="@color/np_select_text_color"
                        app:np_selectedTextSize="@dimen/_15sdp"
                        app:np_textColor="@color/np_normal_text_color"
                        app:np_textSize="@dimen/_12sdp"
                        app:np_value="188"
                        app:np_width="@dimen/_55sdp" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/dialog_height_rel_picker_feet"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_below="@+id/dialog_height_rel_unit"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:visibility="gone">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/dialog_height_lbl_feet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:paddingTop="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_5sdp"
                                android:text="@string/lbl_feet"
                                android:textColor="@color/dialog_header_color"
                                android:textSize="@dimen/_12sdp" />

                            <com.shawnlin.numberpicker.NumberPicker
                                android:id="@+id/dialog_height_nm_picker_feet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/dialog_height_lbl_feet"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/_5sdp"
                                app:np_dividerColor="@color/np_divider_color"
                                app:np_formatter="@string/number_picker_formatter"
                                app:np_height="@dimen/_150sdp"
                                app:np_max="8"
                                app:np_min="1"
                                app:np_selectedTextColor="@color/np_select_text_color"
                                app:np_selectedTextSize="@dimen/_15sdp"
                                app:np_textColor="@color/np_normal_text_color"
                                app:np_textSize="@dimen/_12sdp"
                                app:np_value="5"
                                app:np_width="@dimen/_55sdp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/dialog_height_lbl_inch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:paddingTop="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_5sdp"
                                android:text="@string/lbl_inch"
                                android:textColor="@color/dialog_header_color"
                                android:textSize="@dimen/_12sdp" />

                            <com.shawnlin.numberpicker.NumberPicker
                                android:id="@+id/dialog_height_nm_picker_inch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/dialog_height_lbl_inch"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/_5sdp"
                                app:np_dividerColor="@color/np_divider_color"
                                app:np_formatter="@string/number_picker_formatter"
                                app:np_height="@dimen/_150sdp"
                                app:np_max="11"
                                app:np_min="0"
                                app:np_selectedTextColor="@color/np_select_text_color"
                                app:np_selectedTextSize="@dimen/_15sdp"
                                app:np_textColor="@color/np_normal_text_color"
                                app:np_textSize="@dimen/_12sdp"
                                app:np_value="0"
                                app:np_width="@dimen/_55sdp" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/dialog_height_lin_buttons"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_below="@+id/dialog_height_rel_message"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/dialog_height_rel_done"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/row_edit_button_selector"
                    android:gravity="center">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/lbl_done"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/dialog_height_rel_cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/row_remove_button_selector"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/lbl_cancel"
                        android:textColor="@color/row_remove_text_color"
                        android:textSize="@dimen/_12sdp"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>