<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">

    <include
        android:id="@+id/toolbar_actionbar"
        layout="@layout/layout_toolbar_transparent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/banner1"
        android:layout_below="@+id/toolbar_actionbar"
        android:layout_marginBottom="@dimen/ad_margin_below">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/add_input_rel_bg"
            android:padding="@dimen/_5sdp">

            <LinearLayout
                android:id="@+id/statistics_lin_profiles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="@dimen/profile_spinner_rel_width"
                    android:layout_height="@dimen/profile_spinner_rel_height"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ic_profile_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/statistics_spinner_profiles"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/tool_bar_color_dark"
                            android:dropDownVerticalOffset="@dimen/_100sdp"
                            android:spinnerMode="dropdown" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/statistics_lin_profiles"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp">

                    <RelativeLayout
                        android:id="@+id/statistics_rel_chart_spinners"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_138sdp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_5sdp"
                            app:cardBackgroundColor="@color/chart_spinner_card_color"
                            app:cardCornerRadius="@dimen/_30sdp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center">

                                    <Spinner
                                        android:id="@+id/statistics_spinner_report_type"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:backgroundTint="@color/white"
                                        android:dropDownVerticalOffset="@dimen/_35sdp"
                                        android:spinnerMode="dropdown" />
                                </RelativeLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_98sdp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            app:cardBackgroundColor="@color/chart_spinner_card_color"
                            app:cardCornerRadius="@dimen/_30sdp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center">

                                    <Spinner
                                        android:id="@+id/statistics_spinner_report_duration"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:backgroundTint="@color/white"

                                        android:dropDownVerticalOffset="@dimen/_35sdp"
                                        android:spinnerMode="dropdown" />
                                </RelativeLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/diagram_rel_all_graph_views"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/statistics_rel_chart_spinners">

                        <RelativeLayout
                            android:id="@+id/statistics_rel_chart_duration"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:gravity="center"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <RelativeLayout
                                        android:id="@+id/statistics_rel_chart_all"
                                        android:layout_width="@dimen/chart_duration_btn_width"
                                        android:layout_height="@dimen/chart_duration_btn_height"
                                        android:layout_centerInParent="true"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_marginRight="@dimen/_2sdp"
                                        android:background="@drawable/chart_duration_bg_normal">

                                        <TextView
                                            android:id="@+id/statistics_txt_chart_all"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:layout_marginLeft="@dimen/_10sdp"
                                            android:layout_marginRight="@dimen/_10sdp"

                                            android:gravity="center"
                                            android:text="@string/lbl_all"
                                            android:textColor="@color/chart_duration_text_normal_color"
                                            android:textSize="@dimen/chart_duration_text_size" />
                                    </RelativeLayout>
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <RelativeLayout
                                        android:id="@+id/statistics_rel_chart_today"
                                        android:layout_width="@dimen/chart_duration_btn_width"
                                        android:layout_height="@dimen/chart_duration_btn_height"
                                        android:layout_centerInParent="true"
                                        android:layout_marginLeft="@dimen/_2sdp"
                                        android:layout_marginRight="@dimen/_2sdp"
                                        android:background="@drawable/chart_duration_bg_press">

                                        <TextView
                                            android:id="@+id/statistics_txt_chart_today"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:layout_marginLeft="@dimen/_10sdp"
                                            android:layout_marginRight="@dimen/_10sdp"

                                            android:gravity="center"
                                            android:text="@string/lbl_today"
                                            android:textColor="@color/chart_duration_text_press_color"
                                            android:textSize="@dimen/chart_duration_text_size" />
                                    </RelativeLayout>
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <RelativeLayout
                                        android:id="@+id/statistics_rel_chart_month"
                                        android:layout_width="@dimen/chart_duration_btn_width"
                                        android:layout_height="@dimen/chart_duration_btn_height"
                                        android:layout_centerInParent="true"
                                        android:layout_marginLeft="@dimen/_2sdp"
                                        android:layout_marginRight="@dimen/_2sdp"
                                        android:background="@drawable/chart_duration_bg_normal">

                                        <TextView
                                            android:id="@+id/statistics_txt_chart_month"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:layout_marginLeft="@dimen/_10sdp"
                                            android:layout_marginRight="@dimen/_10sdp"

                                            android:gravity="center"
                                            android:text="@string/lbl_month"
                                            android:textColor="@color/chart_duration_text_normal_color"
                                            android:textSize="@dimen/chart_duration_text_size" />
                                    </RelativeLayout>
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <RelativeLayout
                                        android:id="@+id/statistics_rel_chart_year"
                                        android:layout_width="@dimen/chart_duration_btn_width"
                                        android:layout_height="@dimen/chart_duration_btn_height"
                                        android:layout_centerInParent="true"
                                        android:layout_marginLeft="@dimen/_2sdp"
                                        android:layout_marginRight="@dimen/_2sdp"
                                        android:background="@drawable/chart_duration_bg_normal">

                                        <TextView
                                            android:id="@+id/statistics_txt_chart_year"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:layout_marginLeft="@dimen/_10sdp"
                                            android:layout_marginRight="@dimen/_10sdp"

                                            android:gravity="center"
                                            android:text="@string/lbl_year"
                                            android:textColor="@color/chart_duration_text_normal_color"
                                            android:textSize="@dimen/chart_duration_text_size" />
                                    </RelativeLayout>
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <RelativeLayout
                                        android:id="@+id/statistics_rel_chart_custom"
                                        android:layout_width="@dimen/chart_duration_btn_width"
                                        android:layout_height="@dimen/chart_duration_btn_height"
                                        android:layout_centerInParent="true"
                                        android:layout_marginLeft="@dimen/_2sdp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:background="@drawable/chart_duration_bg_normal">

                                        <TextView
                                            android:id="@+id/statistics_txt_chart_custom"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:layout_marginLeft="@dimen/_10sdp"
                                            android:layout_marginRight="@dimen/_10sdp"

                                            android:gravity="center"
                                            android:text="@string/lbl_custom"
                                            android:textColor="@color/chart_duration_text_normal_color"
                                            android:textSize="@dimen/chart_duration_text_size" />
                                    </RelativeLayout>
                                </RelativeLayout>
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/diagram_lin_bottom_label"
                            android:layout_below="@+id/statistics_rel_chart_duration">

                            <app.android.heartrate.phoneapp.utils.RoundedBarChart
                                android:id="@+id/statistics_bar_chart_today"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/chart_left_margin"
                                android:layout_marginTop="@dimen/chart_top_margin"
                                android:layout_marginRight="@dimen/chart_right_margin"
                                android:layout_marginBottom="@dimen/chart_bottom_margin"
                                android:visibility="visible" />

                            <app.android.heartrate.phoneapp.utils.RoundedBarChart
                                android:id="@+id/statistics_bar_chart_month"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/chart_left_margin"
                                android:layout_marginTop="@dimen/chart_top_margin"
                                android:layout_marginRight="@dimen/chart_right_margin"
                                android:layout_marginBottom="@dimen/chart_bottom_margin"
                                android:visibility="gone" />

                            <app.android.heartrate.phoneapp.utils.RoundedBarChart
                                android:id="@+id/statistics_bar_chart_year"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/chart_left_margin"
                                android:layout_marginTop="@dimen/chart_top_margin"
                                android:layout_marginRight="@dimen/chart_right_margin"
                                android:layout_marginBottom="@dimen/chart_bottom_margin"
                                android:visibility="gone" />

                            <app.android.heartrate.phoneapp.utils.RoundedBarChart
                                android:id="@+id/statistics_bar_chart_all"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/chart_left_margin"
                                android:layout_marginTop="@dimen/chart_top_margin"
                                android:layout_marginRight="@dimen/chart_right_margin"
                                android:layout_marginBottom="@dimen/chart_bottom_margin"
                                android:visibility="gone" />

                            <app.android.heartrate.phoneapp.utils.RoundedBarChart
                                android:id="@+id/statistics_bar_chart_custom"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/chart_left_margin"
                                android:layout_marginTop="@dimen/chart_top_margin"
                                android:layout_marginRight="@dimen/chart_right_margin"
                                android:layout_marginBottom="@dimen/chart_bottom_margin"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/diagram_lin_bottom_label"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_28sdp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/statistics_txt_tracker_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"

                                android:gravity="center"
                                android:text="@string/lbl_weight"
                                android:textColor="@color/chart_name_text_color"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/lbl_no_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/lbl_no_diagram_data"
                            android:textColor="@color/text_color_no_data"
                            android:textSize="@dimen/app_no_data_text_size"
                            android:visibility="gone" />
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </RelativeLayout>



</RelativeLayout>
