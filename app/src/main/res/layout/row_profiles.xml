<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/app_card_radius"
        app:cardElevation="@dimen/_2sdp">

        <RelativeLayout
            android:id="@+id/row_profile_rel_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/row_card_rel_selector"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_5sdp">

            <RelativeLayout
                android:id="@+id/row_profile_rel_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp">

                <RelativeLayout
                    android:id="@+id/row_profile_rel_image"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_alignParentRight="true">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/row_profile_img_user"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_default_user"
                        app:civ_border_color="@color/transparent"
                        app:civ_border_width="0dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/row_profile_rel_date_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/row_profile_rel_image"
                    android:gravity="center_vertical">

                    <RelativeLayout
                        android:id="@+id/row_profile_rel_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/row_profile_txt_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:text="@string/lbl_name"
                            android:textColor="@color/row_header_text_color"
                            android:textSize="@dimen/_13sdp" />

                        <TextView
                            android:id="@+id/row_profile_txt_dob"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/row_profile_txt_name"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:gravity="center_vertical"
                            android:text="@string/lbl_dash"
                            android:textColor="@color/row_text_color"
                            android:textSize="@dimen/_12sdp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/row_profile_rel_detail"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical">

                            <RelativeLayout
                                android:id="@+id/row_profile_rel_gender"
                                android:layout_width="@dimen/_22sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:background="@drawable/list_row_gender_icon_bg">

                                <ImageView
                                    android:id="@+id/row_profile_img_gender"
                                    android:layout_width="@dimen/_12sdp"
                                    android:layout_height="@dimen/_12sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_row_gender" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/row_profile_txt_gender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:layout_toRightOf="@+id/row_profile_rel_gender"
                                android:singleLine="true"
                                android:text="@string/lbl_male"
                                android:textAllCaps="false"
                                android:textColor="@color/row_value_text_color"
                                android:textSize="@dimen/_11sdp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:gravity="center_vertical">

                            <RelativeLayout
                                android:id="@+id/row_profile_rel_height"
                                android:layout_width="@dimen/_22sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:layout_centerVertical="true"
                                android:background="@drawable/list_row_height_icon_bg">

                                <ImageView
                                    android:layout_width="@dimen/_12sdp"
                                    android:layout_height="@dimen/_12sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_row_height" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/row_profile_txt_height"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:layout_toRightOf="@+id/row_profile_rel_height"
                                android:singleLine="true"
                                android:text="@string/lbl_dash"
                                android:textAllCaps="false"
                                android:textColor="@color/row_value_text_color"
                                android:textSize="@dimen/_11sdp" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/row_profile_rel_buttons"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/row_profile_rel_top"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:gravity="center">

                <RelativeLayout
                    android:id="@+id/row_profile_rel_delete"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/row_rounded_remove_button_bg_selector"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/row_profile_img_delete"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:src="@drawable/ic_row_delete" />

                    <TextView
                        android:id="@+id/row_profile_lbl_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/row_profile_img_delete"
                        android:text="@string/lbl_delete"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/row_profile_rel_edit"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/row_profile_rel_delete"
                    android:background="@drawable/row_rounded_edit_button_bg_selector"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/row_profile_img_edit"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:src="@drawable/ic_row_edit" />

                    <TextView
                        android:id="@+id/row_profile_lbl_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/row_profile_img_edit"
                        android:text="@string/lbl_edit"
                        android:textColor="@color/row_btn_text_color"
                        android:textSize="@dimen/_12sdp" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
