<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/app_card_radius"
        app:cardElevation="@dimen/_2sdp">

        <LinearLayout
            android:id="@+id/row_bmi_lin_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/row_card_rel_selector"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/row_bmi_txt_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:singleLine="true"
                        android:text="@string/lbl_time"
                        android:textColor="@color/row_header_text_color"
                        android:textSize="@dimen/row_title_text_size" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/row_bmi_txt_time"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_2sdp">

                        <TextView
                            android:id="@+id/row_bmi_txt_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center_vertical"
                            android:text="Day"
                            android:textColor="@color/app_text_color"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/row_bmi_txt_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_toRightOf="@+id/row_bmi_txt_day"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Month,"
                            android:textColor="@color/app_text_color"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/row_bmi_txt_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_toRightOf="@+id/row_bmi_txt_month"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Year"
                            android:textColor="@color/app_text_color"
                            android:textSize="@dimen/_12sdp" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/row_bmi_txt_bmi_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:singleLine="true"
                        android:text="100"
                        android:textColor="@color/row_text_color"
                        android:textSize="@dimen/_16sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/row_bmi_txt_bmi_value"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:singleLine="true"
                        android:text="@string/lbl_current_bmi"
                        android:textColor="@color/row_text_color"
                        android:textSize="@dimen/row_title_text_size" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/row_bmi_txt_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:singleLine="true"
                            android:text="@string/app_name"
                            android:textColor="@color/bmi_result_text_color"
                            android:textSize="@dimen/_13sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/row_bmi_txt_status"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:fontFamily="@font/roboto_regular"
                            android:singleLine="true"
                            android:text="@string/lbl_current_bmi_result"
                            android:textColor="@color/summery_text_color"
                            android:textSize="@dimen/_8sdp" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/row_indicator_rounded_bg"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/row_indicator_rounded_border_bg"
                        android:padding="@dimen/_2sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center_vertical">

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_centerHorizontal="true"
                                            android:layout_centerVertical="true"
                                            android:background="@drawable/status_start_rounded" />

                                        <ImageView
                                            android:id="@+id/row_bmi_img_very_severely"
                                            android:layout_width="@dimen/row_indicator_arrow_width"
                                            android:layout_height="@dimen/row_indicator_arrow_height"
                                            android:layout_centerHorizontal="true"
                                            android:src="@drawable/ic_row_down_arrow"
                                            android:visibility="invisible" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:visibility="gone">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:fontFamily="@font/roboto_regular"
                                            android:gravity="center"
                                            android:text="@string/lbl_row_low_hypotension"
                                            android:textAlignment="center"
                                            android:textColor="@color/row_text_color_summery"
                                            android:textSize="@dimen/_6sdp" />
                                    </RelativeLayout>
                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center_vertical">

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_centerHorizontal="true"
                                            android:layout_centerVertical="true"
                                            android:background="@color/row_status_color_2" />

                                        <ImageView
                                            android:id="@+id/row_bmi_img_severely"
                                            android:layout_width="@dimen/row_indicator_arrow_width"
                                            android:layout_height="@dimen/row_indicator_arrow_height"
                                            android:layout_centerHorizontal="true"
                                            android:src="@drawable/ic_row_down_arrow"
                                            android:visibility="invisible" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:visibility="gone">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:fontFamily="@font/roboto_regular"
                                            android:gravity="center"
                                            android:text="@string/lbl_normal"
                                            android:textAlignment="center"
                                            android:textColor="@color/row_text_color_summery"
                                            android:textSize="@dimen/_6sdp" />
                                    </RelativeLayout>
                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center_vertical">

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_centerHorizontal="true"
                                            android:layout_centerVertical="true"
                                            android:background="@color/row_status_color_3" />

                                        <ImageView
                                            android:id="@+id/row_bmi_img_underweight"
                                            android:layout_width="@dimen/row_indicator_arrow_width"
                                            android:layout_height="@dimen/row_indicator_arrow_height"
                                            android:layout_centerHorizontal="true"
                                            android:src="@drawable/ic_row_down_arrow"
                                            android:visibility="invisible" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:visibility="gone">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:fontFamily="@font/roboto_regular"
                                            android:gravity="center"
                                            android:text="@string/lbl_row_pre_hypertension"
                                            android:textAlignment="center"
                                            android:textColor="@color/row_text_color_summery"
                                            android:textSize="@dimen/_6sdp" />
                                    </RelativeLayout>
                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center_vertical">

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_centerHorizontal="true"
                                            android:layout_centerVertical="true"
                                            android:background="@color/row_status_color_4" />

                                        <ImageView
                                            android:id="@+id/row_bmi_img_normal"
                                            android:layout_width="@dimen/row_indicator_arrow_width"
                                            android:layout_height="@dimen/row_indicator_arrow_height"
                                            android:layout_centerHorizontal="true"
                                            android:src="@drawable/ic_row_down_arrow"
                                            android:visibility="invisible" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:visibility="gone">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:fontFamily="@font/roboto_regular"
                                            android:gravity="center"
                                            android:text="@string/lbl_row_high_stage_1"
                                            android:textAlignment="center"
                                            android:textColor="@color/row_text_color_summery"
                                            android:textSize="@dimen/_6sdp" />
                                    </RelativeLayout>
                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center_vertical">

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_centerHorizontal="true"
                                            android:layout_centerVertical="true"
                                            android:background="@color/row_status_color_5" />

                                        <ImageView
                                            android:id="@+id/row_bmi_img_overweight"
                                            android:layout_width="@dimen/row_indicator_arrow_width"
                                            android:layout_height="@dimen/row_indicator_arrow_height"
                                            android:layout_centerHorizontal="true"
                                            android:src="@drawable/ic_row_down_arrow"
                                            android:visibility="invisible" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:visibility="gone">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:fontFamily="@font/roboto_regular"
                                            android:gravity="center"
                                            android:text="@string/lbl_row_high_stage_2"
                                            android:textAlignment="center"
                                            android:textColor="@color/row_text_color_summery"
                                            android:textSize="@dimen/_6sdp" />
                                    </RelativeLayout>
                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center_vertical">

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_centerHorizontal="true"
                                            android:layout_centerVertical="true"
                                            android:background="@color/row_status_color_6" />

                                        <ImageView
                                            android:id="@+id/row_bmi_img_moderately_obese"
                                            android:layout_width="@dimen/row_indicator_arrow_width"
                                            android:layout_height="@dimen/row_indicator_arrow_height"
                                            android:layout_centerHorizontal="true"
                                            android:src="@drawable/ic_row_down_arrow"
                                            android:visibility="invisible" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:visibility="gone">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:fontFamily="@font/roboto_regular"
                                            android:gravity="center"
                                            android:text="@string/lbl_row_high_crisis"
                                            android:textAlignment="center"
                                            android:textColor="@color/row_text_color_summery"
                                            android:textSize="@dimen/_6sdp" />
                                    </RelativeLayout>
                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center_vertical">

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_centerHorizontal="true"
                                            android:layout_centerVertical="true"
                                            android:background="@color/row_status_color_7" />

                                        <ImageView
                                            android:id="@+id/row_bmi_img_severely_obese"
                                            android:layout_width="@dimen/row_indicator_arrow_width"
                                            android:layout_height="@dimen/row_indicator_arrow_height"
                                            android:layout_centerHorizontal="true"
                                            android:src="@drawable/ic_row_down_arrow"
                                            android:visibility="invisible" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:visibility="gone">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:fontFamily="@font/roboto_regular"
                                            android:gravity="center"
                                            android:text="@string/lbl_row_high_stage_2"
                                            android:textAlignment="center"
                                            android:textColor="@color/row_text_color_summery"
                                            android:textSize="@dimen/_6sdp" />
                                    </RelativeLayout>
                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center_vertical">

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_centerHorizontal="true"
                                            android:layout_centerVertical="true"
                                            android:background="@drawable/bmi_status_end_rounded" />

                                        <ImageView
                                            android:id="@+id/row_bmi_img_very_severely_obese"
                                            android:layout_width="@dimen/row_indicator_arrow_width"
                                            android:layout_height="@dimen/row_indicator_arrow_height"
                                            android:layout_centerHorizontal="true"
                                            android:src="@drawable/ic_row_down_arrow"
                                            android:visibility="invisible" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:visibility="gone">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:fontFamily="@font/roboto_regular"
                                            android:gravity="center"
                                            android:text="@string/lbl_row_high_crisis"
                                            android:textAlignment="center"
                                            android:textColor="@color/row_text_color_summery"
                                            android:textSize="@dimen/_6sdp" />
                                    </RelativeLayout>
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_centerInParent="true"
                            app:cardBackgroundColor="@color/row_square_bg_color"
                            app:cardCornerRadius="@dimen/_30sdp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="@string/lbl_weight"
                                    android:textColor="@color/row_text_color"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_4sdp"
                                    android:layout_marginRight="@dimen/_4sdp"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text=":"
                                    android:textColor="@color/row_text_color"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/row_bmi_txt_weight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/lbl_dash"
                                    android:textColor="@color/row_text_color"
                                    android:textSize="@dimen/_15sdp" />

                                <TextView
                                    android:id="@+id/row_bmi_txt_weight_unit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_4sdp"
                                    android:layout_marginTop="@dimen/_1sdp"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="@string/lbl_kg"
                                    android:textColor="@color/row_text_color"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_centerInParent="true"
                            app:cardBackgroundColor="@color/row_square_bg_color"
                            app:cardCornerRadius="@dimen/_30sdp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="@string/lbl_height"
                                    android:textColor="@color/row_text_color"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:layout_width="wrap_content"
