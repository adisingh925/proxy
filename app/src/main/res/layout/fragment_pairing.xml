<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.PairingFragment">

    <ImageView
        android:id="@+id/health_logo"
        android:layout_width="50dp"
        android:src="@drawable/health"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintRight_toLeftOf="@id/heartrate_value"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/heartrate_value"
        android:layout_width="wrap_content"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/health_logo"
        android:text="0.0"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/fallDetected"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/heartrate_value"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        android:text="_____"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>