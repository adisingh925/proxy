<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">

    <include
        android:id="@+id/toolbar_actionbar"
        layout="@layout/layout_toolbar_add" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/banner1"
        android:layout_below="@+id/toolbar_actionbar"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/ad_margin_below">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/app_scroll_view_margin_left"
            android:layout_marginRight="@dimen/app_scroll_view_margin_right"
            android:layout_marginBottom="@dimen/app_scroll_view_margin_bottom"
            android:fadingEdge="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/add_input_rel_bg"

                android:padding="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/add_bp_lin_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="@dimen/profile_spinner_rel_width"
                            android:layout_height="@dimen/profile_spinner_rel_height"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/ic_profile_bg">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <Spinner
                                    android:id="@+id/add_bp_spinner_profiles"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:backgroundTint="@color/tool_bar_color_dark"
                                    android:dropDownVerticalOffset="@dimen/_100sdp"
                                    android:spinnerMode="dropdown" />

                                <ImageView
                                    android:layout_width="@dimen/_22sdp"
                                    android:layout_height="@dimen/_22sdp"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:src="@drawable/ic_vector_down_arrow"
                                    android:visibility="gone"
                                    app:tint="@color/black" />
                            </RelativeLayout>
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_120sdp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="@dimen/_10sdp"
                                app:cardElevation="0dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <LinearLayout
                                        android:id="@+id/add_bp_lin_systolic_input"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_45sdp"
                                        android:layout_alignParentTop="true"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1.4"
                                            android:orientation="vertical">

                                            <EditText
                                                android:id="@+id/add_bp_et_systolic_value"
                                                android:layout_width="match_parent"
                                                android:layout_height="@dimen/_30sdp"
                                                android:layout_marginLeft="@dimen/_5sdp"
                                                android:layout_marginTop="@dimen/_5sdp"
                                                android:layout_marginRight="@dimen/_5sdp"
                                                android:background="@color/transparent"
                                                android:backgroundTint="@color/et_base_color"

                                                android:gravity="center"
                                                android:hint="@string/lbl_hint_systolic"
                                                android:inputType="number"
                                                android:paddingLeft="@dimen/_5sdp"
                                                android:paddingTop="@dimen/_5sdp"
                                                android:paddingRight="@dimen/_5sdp"
                                                android:textColor="@color/input_text_color"
                                                android:textColorHint="@color/et_hint_text_color"
                                                android:textCursorDrawable="@drawable/cursor_black"
                                                android:textSize="@dimen/_12sdp" />

                                            <View
                                                android:layout_width="match_parent"
                                                android:layout_height="@dimen/et_base_hr_height"
                                                android:layout_marginLeft="@dimen/_5sdp"
                                                android:layout_marginRight="@dimen/_5sdp"
                                                android:background="@color/et_base_color" />
                                        </LinearLayout>

                                        <RelativeLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.6"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentBottom="true"
                                                android:layout_marginLeft="@dimen/_5sdp"
                                                android:layout_marginRight="@dimen/_5sdp"
                                                android:layout_marginBottom="@dimen/_10sdp"

                                                android:singleLine="true"
                                                android:text="@string/lbl_mg_hg"
                                                android:textAllCaps="false"
                                                android:textColor="@color/app_text_color"
                                                android:textSize="@dimen/_8sdp" />
                                        </RelativeLayout>
                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_above="@+id/add_bp_lbl_systolic"
                                        android:layout_below="@+id/add_bp_lin_systolic_input">

                                        <ImageView
                                            android:layout_width="@dimen/_100sdp"
                                            android:layout_height="@dimen/_36sdp"
                                            android:layout_centerInParent="true"
                                            android:src="@drawable/ic_systolic_graph" />
                                    </RelativeLayout>

                                    <TextView
                                        android:id="@+id/add_bp_lbl_systolic"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:layout_marginBottom="@dimen/_5sdp"

                                        android:singleLine="true"
                                        android:text="@string/lbl_systolic"
                                        android:textAllCaps="true"
                                        android:textColor="@color/app_text_color"
                                        android:textSize="@dimen/_10sdp" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_120sdp"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="@dimen/_10sdp"
                                app:cardElevation="0dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <LinearLayout
                                        android:id="@+id/add_bp_lin_diastolic_input"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_45sdp"
                                        android:layout_alignParentTop="true"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1.4"
                                            android:orientation="vertical">

                                            <EditText
                                                android:id="@+id/add_bp_et_diastolic_value"
                                                android:layout_width="match_parent"
                                                android:layout_height="@dimen/_30sdp"
                                                android:layout_marginLeft="@dimen/_5sdp"
                                                android:layout_marginTop="@dimen/_5sdp"
                                                android:layout_marginRight="@dimen/_5sdp"
                                                android:background="@color/transparent"
                                                android:backgroundTint="@color/et_base_color"

                                                android:gravity="center"
                                                android:hint="@string/lbl_hint_diastolic"
                                                android:inputType="number"
                                                android:paddingLeft="@dimen/_5sdp"
                                                android:paddingTop="@dimen/_5sdp"
                                                android:paddingRight="@dimen/_5sdp"
                                                android:textColor="@color/input_text_color"
                                                android:textColorHint="@color/et_hint_text_color"
                                                android:textCursorDrawable="@drawable/cursor_black"
                                                android:textSize="@dimen/_12sdp" />

                                            <View
                                                android:layout_width="match_parent"
                                                android:layout_height="@dimen/et_base_hr_height"
                                                android:layout_marginLeft="@dimen/_5sdp"
                                                android:layout_marginRight="@dimen/_5sdp"
                                                android:background="@color/et_base_color" />
                                        </LinearLayout>

                                        <RelativeLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.6"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentBottom="true"
                                                android:layout_marginLeft="@dimen/_5sdp"
                                                android:layout_marginRight="@dimen/_5sdp"
                                                android:layout_marginBottom="@dimen/_10sdp"

                                                android:singleLine="true"
                                                android:text="@string/lbl_mg_hg"
                                                android:textAllCaps="false"
                                                android:textColor="@color/app_text_color"
                                                android:textSize="@dimen/_8sdp" />
                                        </RelativeLayout>
                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_above="@+id/add_bp_lbl_diastolic"
                                        android:layout_below="@+id/add_bp_lin_diastolic_input">

                                        <ImageView
                                            android:layout_width="@dimen/_100sdp"
                                            android:layout_height="@dimen/_36sdp"
                                            android:layout_centerInParent="true"
                                            android:src="@drawable/ic_diastolic_graph" />
                                    </RelativeLayout>

                                    <TextView
                                        android:id="@+id/add_bp_lbl_diastolic"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:layout_marginBottom="@dimen/_5sdp"

                                        android:singleLine="true"
                                        android:text="@string/lbl_diastolic"
                                        android:textAllCaps="true"
                                        android:textColor="@color/app_text_color"
                                        android:textSize="@dimen/_10sdp" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardElevation="0dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:id="@+id/add_bp_lin_pulse_rate_input"
                                    android:layout_width="@dimen/_120sdp"
                                    android:layout_height="@dimen/_45sdp"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:orientation="horizontal">

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.4"
                                        android:orientation="vertical">

                                        <EditText
                                            android:id="@+id/add_bp_et_pulse_rate"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_above="@+id/add_bp_hr_pulse_rate"
                                            android:layout_marginLeft="@dimen/_5sdp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:layout_marginRight="@dimen/_5sdp"
                                            android:background="@color/transparent"
                                            android:backgroundTint="@color/et_base_color"

                                            android:gravity="center"
                                            android:hint="@string/lbl_hint_pulse_rate"
                                            android:inputType="number"
                                            android:paddingLeft="@dimen/_5sdp"
                                            android:paddingTop="@dimen/_5sdp"
                                            android:paddingRight="@dimen/_5sdp"
                                            android:textColor="@color/input_text_color"
                                            android:textColorHint="@color/et_hint_text_color"
                                            android:textCursorDrawable="@drawable/cursor_black"
                                            android:textSize="@dimen/_12sdp" />

                                        <View
                                            android:id="@+id/add_bp_hr_pulse_rate"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/et_base_hr_height"
                                            android:layout_alignParentBottom="true"
                                            android:layout_marginLeft="@dimen/_5sdp"
                                            android:layout_marginRight="@dimen/_5sdp"
                                            android:background="@color/et_base_color" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.6"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentBottom="true"
                                            android:layout_marginLeft="@dimen/_5sdp"
                                            android:layout_marginRight="@dimen/_5sdp"
                                            android:layout_marginBottom="@dimen/_10sdp"

                                            android:singleLine="true"
                                            android:text="@string/lbl_bpm"
                                            android:textAllCaps="false"
                                            android:textColor="@color/app_text_color"
                                            android:textSize="@dimen/_10sdp" />
                                    </RelativeLayout>
                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_above="@+id/add_bp_lbl_pulse_rate"
                                    android:layout_below="@+id/add_bp_lin_pulse_rate_input">

                                    <ImageView
                                        android:layout_width="@dimen/_460sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/ic_pulse_rate_graph" />
                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/add_bp_lbl_pulse_rate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"

                                    android:singleLine="true"
                                    android:text="@string/lbl_pulse_rate"
                                    android:textAllCaps="true"
                                    android:textColor="@color/app_text_color"
                                    android:textSize="@dimen/_10sdp" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:visibility="visible"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="@dimen/_8sdp"
                                app:cardElevation="0dp">

                                <RelativeLayout
                                    android:id="@+id/add_bp_rel_select_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/select_date_rel_selector"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/add_bp_lbl_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_marginRight="@dimen/_5sdp"

                                        android:singleLine="true"
                                        android:text="@string/lbl_date"
                                        android:textAllCaps="false"
                                        android:textColor="@color/label_text_color"
                                        android:textSize="@dimen/_11sdp" />

                                    <TextView
                                        android:id="@+id/add_bp_txt_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/add_bp_lbl_date"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_marginRight="@dimen/_10sdp"

                                        android:singleLine="true"
                                        android:text="@string/lbl_dash"
                                        android:textColor="@color/input_text_color"
                                        android:textSize="@dimen/app_input_text_size" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:visibility="visible"
                                app:cardBackgroundColor="@color/select_time_rel_bg_color"
                                app:cardCornerRadius="@dimen/_8sdp"
                                app:cardElevation="0dp">

                                <RelativeLayout
                                    android:id="@+id/add_bp_rel_select_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/select_time_rel_selector"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/add_bp_lbl_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_marginRight="@dimen/_5sdp"

                                        android:singleLine="true"
                                        android:text="@string/lbl_time"
                                        android:textAllCaps="false"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_11sdp" />

                                    <TextView
                                        android:id="@+id/add_bp_txt_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/add_bp_lbl_time"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_marginRight="@dimen/_10sdp"

                                        android:singleLine="true"
                                        android:text="@string/lbl_dash"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/app_input_text_size" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>
                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_5sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"

                                    android:singleLine="true"
                                    android:text="@string/lbl_heading_automatic_value"
                                    android:textAllCaps="true"
                                    android:textColor="@color/app_text_color"
                                    android:textSize="@dimen/app_label_text_size_10" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_2sdp"

                                    android:text="@string/lbl_heading_pulse_pressure_formula"
                                    android:textColor="@color/app_formula_text_color"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/input_card_height"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/add_bp_txt_pulse_pressure_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"

                                    android:text="@string/lbl_dash"
                                    android:textColor="@color/app_text_color"
                                    android:textSize="@dimen/app_label_text_size_16" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/add_bp_txt_pulse_pressure_value"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_toRightOf="@+id/add_bp_txt_pulse_pressure_value"

                                    android:gravity="right"
                                    android:text="@string/lbl_mg_hg"
                                    android:textColor="@color/app_text_color"
                                    android:textSize="@dimen/_10sdp" />
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_5sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_10sdp"

                                    android:singleLine="true"
                                    android:text="@string/lbl_heading_mean_arterial"
                                    android:textColor="@color/app_text_color"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_2sdp"

                                    android:text="@string/lbl_heading_mean_arterial_formula"
                                    android:textColor="@color/app_formula_text_color"
                                    android:textSize="@dimen/_10sdp" />
