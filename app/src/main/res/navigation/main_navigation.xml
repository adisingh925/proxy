<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="app.android.heartrate.phoneapp.fragments.WelcomeFragment"
        android:label="fragment_welcome_fragment"
        tools:layout="@layout/fragment_welcome_fragment" >
        <action
            android:id="@+id/action_welcomeFragment_to_loginFragment3"
            app:destination="@id/loginFragment3" />
    </fragment>
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="app.android.heartrate.phoneapp.fragments.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_dashboardFragment_to_pairingFragment"
            app:destination="@id/pairingFragment" />
    </fragment>
    <fragment
        android:id="@+id/pairingFragment"
        android:name="app.android.heartrate.phoneapp.fragments.PairingFragment"
        android:label="fragment_pairing"
        tools:layout="@layout/fragment_pairing" />
    <fragment
        android:id="@+id/signupFragment"
        android:name="app.android.heartrate.phoneapp.fragments.SignupFragment"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup" />
    <fragment
        android:id="@+id/loginFragment3"
        android:name="app.android.heartrate.phoneapp.fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment3_to_signupFragment"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/action_loginFragment3_to_chooseRoleFragment"
            app:destination="@id/chooseRoleFragment" />
        <action
            android:id="@+id/action_loginFragment3_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_loginFragment3_to_dashboardFragment"
            app:destination="@id/dashboardFragment" />
        <action
            android:id="@+id/action_loginFragment3_to_allPatientDashboard"
            app:destination="@id/allPatientDashboard" />
    </fragment>
    <fragment
        android:id="@+id/chooseRoleFragment"
        android:name="app.android.heartrate.phoneapp.fragments.ChooseRoleFragment"
        android:label="fragment_choose_role"
        tools:layout="@layout/fragment_choose_role" >
        <action
            android:id="@+id/action_chooseRoleFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="app.android.heartrate.phoneapp.fragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment" />
    </fragment>
    <fragment
        android:id="@+id/allPatientDashboard"
        android:name="app.android.heartrate.phoneapp.fragments.AllPatientDashboard"
        android:label="fragment_all_patient_dashboard"
        tools:layout="@layout/fragment_all_patient_dashboard" />
</navigation>